":[{"type":"text","value":"Date: ","key":"Qrr9IL2L6y"}],"key":"ZQmOapeOpe"},{"type":"text","value":"September 30, 2019 | ","key":"uLpL16Qzrj"},{"type":"strong","children":[{"type":"text","value":"Author: ","key":"a9oMVbdpn9"}],"key":"deiMC5rjHY"},{"type":"text","value":"Tom Nicholas","key":"uI0iKjT2wz"}],"key":"Et15ef260z"}],"urlSource":"/blog/2019/theconversation-fusion","key":"MZm7DuceYH"}],"key":"nrnK8gc9Qx"}],"key":"TAVzx8USnU"},"references":{"cite":{"order":[],"data":{}}},"footer":{"navigation":{"next":{"title":"About me","url":"/about","group":"Welcome"}}},"domain":"http://localhost:3000"}